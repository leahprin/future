{% set blogInfo = _Blog.getHomeBlogSettings()%}
<footer class="footer">
    <div class="footer__container">
        <div class="footer__info-mobile">
            <a href="{{networkData.defaultBlogUrl}}" class="footer__logo"><img src="{{_Media.getMediaUrl(networkData.logoMedia, 118, 78, {'crop': 'fit'})}}" /></a>
            <div class="footer__social-links">
                {% if blogInfo.social['twitter'] is not empty %}
                    <a href="http://www.twitter.com/{{blogInfo.social['twitter']}}" class="fa_twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                {% endif %}
                {% if blogInfo.social['facebook'] is not empty %}
                    <a href="http://{{blogInfo.social['facebook']}}" class="fa_facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                {% endif %}
                {% if blogInfo.social['google'] is not empty %}
                    <a href="{{blogInfo.social['google']}}" class="fa_gplus"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                {% endif %}
            </div>
            <a class="footer__additional-links" href="#">Contact Us</a>
            <a class="footer__additional-links" href="#">Privacy Policy</a>
            <a class="footer__additional-links" href="#">Terms & Conditions</a>
            <div class="footer__copyright">Copyright 2016</div>
        </div>

        <div class="footer__desktop">
            <div class="footer__left">
                <a href="{{network.defaultBlogUrl}}" class="footer__logo"><img src="https://unsplash.it/225/50"/></a>
                <div class="footer__navigation">
                    <div class="header__navigation-row">
                        {% set menuItems = blogData.blogMenu %}
                        {% set halfCounter = (menuItems | length / 2) | round(0, 'ceil') - 1 %}
                        <ul class="footer__navigation-list">
                            <li class="footer__navigation-item"><a href="{{homeUrl}}" class="footer__navigation-link footer__navigation-selected">Home</a></li>
                            {% for menuItem in menuItems %}
                                <li class="footer__navigation-item">
                                    <a href="{{menuItem.link}}" class="footer__navigation-link">
                                        {% if menuItem.pageTitle == "" %}
                                            {{menuItem.blogTitle}}
                                        {% else %}
                                            {{menuItem.pageTitle}}
                                        {% endif %}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer__right">
                <div class="footer__additional-links">
                    <div class="footer__social-links">
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-youtube-play"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                        <a href="#"><i class="fa fa-facebook-f"></i></a>
                    </div>
                    <a class="footer__additional-links" href="#">Contact Us</a>
                    <a class="footer__additional-links" href="#">Privacy Policy</a>
                    <a class="footer__additional-links" href="#">Terms & Conditions</a>
                </div>
            </div>
        </div>
    </div>
    <div class="footer__container">
        <div class="footer__copyright">Â© All rights reserved</div>
    </div>
</footer>